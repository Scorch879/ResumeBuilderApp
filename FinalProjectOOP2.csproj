<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Templates\AcademicTemplate.html" />
    <None Remove="Resources\Templates\AttorneyTemplate.html" />
    <None Remove="Resources\Templates\CallCenterTemplate.html" />
    <None Remove="Resources\Templates\DoctorTemplate.html" />
    <None Remove="Resources\Templates\ElectricalEngineeringTemplate.html" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FontAwesome.Sharp" Version="6.6.0" />
    <PackageReference Include="Guna.UI2.WinForms" Version="2.0.4.7" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3179.45" />
    <PackageReference Include="Scriban" Version="6.2.0" />
    <PackageReference Include="Siticone.Desktop.UI" Version="2.1.1" />
    <PackageReference Include="Siticone.NetCore.UI" Version="2025.2.14" />
    <PackageReference Include="Siticone.NetFramework.UI" Version="2025.2.14" />
    <PackageReference Include="Siticone.WinForms.UI" Version="2024.10.7" />
    <PackageReference Include="System.Data.OleDb" Version="9.0.2" />
    <PackageReference Include="Uno.WinUI" Version="5.6.81" />
    <PackageReference Include="WinFormAnimation" Version="1.6.0.4" />
    <PackageReference Include="WinForms.DataVisualization" Version="1.10.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Templates\AcademicTemplate.html" />
    <EmbeddedResource Include="Resources\Templates\AttorneyTemplate.html" />
    <EmbeddedResource Include="Resources\Templates\CallCenterTemplate.html" />
    <EmbeddedResource Include="Resources\Templates\DoctorTemplate.html" />
    <EmbeddedResource Include="Resources\Templates\ElectricalEngineeringTemplate.html" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>